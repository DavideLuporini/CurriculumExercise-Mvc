@model Skill
@{
    ViewData["Title"] = "Add SKill";
}

<head>
    <link rel="stylesheet" href="/css/Home/AddSkill.css">
</head>




<h1>@ViewData["Title"]</h1>
@using (Html.BeginForm("AddSkill", "Admin", FormMethod.Post, new { id = "myForm" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", required = "required" , id = "textbox"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SkillValue)
        @Html.DropDownListFor(m => m.SkillValue, Enumerable.Range(1, 100).Select(i => new SelectListItem
    {
    Value = i.ToString(),
    Text = i.ToString()
    }), new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>

}

