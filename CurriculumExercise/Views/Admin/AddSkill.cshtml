@model Skill

<script>
    const form = document.getElementById("myForm");
    const element = document.getElementById("textbox");
    form.addEventListener("submit", (event) => {
        event.preventDefault(); // prevent default form submission
        element.innerText = "";
        form.reset(); // reset form values
    });
</script>
<h1>Add Skill</h1>
@using (Html.BeginForm("AddSkill", "Admin", FormMethod.Post, new { id = "myForm" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", required = "required" , id = "textbox"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SkillValue)
        @Html.DropDownListFor(m => m.SkillValue, Enumerable.Range(1, 100).Select(i => new SelectListItem
    {
    Value = i.ToString(),
    Text = i.ToString()
    }), new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>

}

