@model Lavoro

@using (Html.BeginForm("AddWork", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Azienda)
        @Html.TextBoxFor(m => m.Azienda, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DataInizio)
        <input type="date" class="form-control" id="dataInizio" name="dataInizio" required>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DataFine)
        <input type="date" class="form-control" id="dataFine" name="dataFine" required>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}
