@model Work
@{
    ViewData["Title"] = "Add Work";
}

    <h1>@ViewData["Title"]</h1>
@using (Html.BeginForm("AddWork", "Admin", FormMethod.Post, new { id = "myForm" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Azienda)
        @Html.TextBoxFor(m => m.Azienda, new { @class = "form-control", required = "required" , id = "azienda"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DataInizio)
        <input id="inizio" type="date" class="form-control" id="dataInizio" name="dataInizio" required>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DataFine)
        <input type="date" class="form-control" id="dataFine" name="dataFine" required>
    </div>

    <button  type="submit" class="btn btn-primary">Save</button>
}



<script>
    const form = document.getElementById("myForm");
    const azienda = document.getElementById("azienda");
    form.addEventListener("submit", (event) => {
        event.preventDefault(); // prevent default form submission
        form.reset(); // reset form values
    });
</script>